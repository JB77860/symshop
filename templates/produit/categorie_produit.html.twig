{% extends 'base.html.twig' %}

{% block title %}Tous les produits de la catégorie {{ categorie.nom }}
{% endblock %}

{% block body %}

	<div class="album py-5 bg-light">
		<div class="container">

			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

				{% for produit in categorie.produits %}
					<div class="col">
						<div class="card shadow-sm">
                        
                        <img src="{{produit.image}}" class="img-fluid" alt="">
							<div class="card-body">
                            <h3 class="title text-center p-1">{{produit.nom}}</h3>
								<p class="card-text">{{produit.description}} - This is a wider card with suppoting text below as a natutal lead-in to additional ontent. This content is a little bit longer</p>
                                <hr>
                                <p class="text-center fs-2 fw-bold">{{produit.prix}} €</p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group gap-1">
										<a href="{{ path('app_detail_produit', {'id' : produit.id }) }}" type="button" class="btn btn-sm btn-outline-secondary">Voir</a>
										<button type="button" class="btn btn-sm btn-success">Ajouter</button>
									</div>
									<small class="text-muted ps-4 fs-6">{{produit.categorie.nom}}</small>
								</div>
							</div>
						</div>
					</div>

				{% endfor %}
			</div>

		</div>

	</div>


	{% endblock %}
