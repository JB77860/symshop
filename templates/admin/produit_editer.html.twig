{% extends "base.html.twig" %}

{% block title %}BACKOFFICE: MODIFIER UN PRODUIT{% endblock %}

{% block body %}

    <div class="container">

        <h1 class="display4 text-center bg-primary text-white my-5">Ajouter un nouveau produit</h1>

        {{ form_start(form, {'attr' : {'class' : 'col-md-6 col-lg-4 mx-auto'}}) }}

            {{ form_row(form.nom) }}
            {{ form_row(form.categorie) }}
            {{ form_row(form.description) }}
            {{ form_row(form.prix) }}
            {{ form_row(form.image) }}
            {{ form_row(form.stock) }}

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Modifier le produit</button>
            </div>

        {{ form_end(form) }}

    </div>

{% endblock %}